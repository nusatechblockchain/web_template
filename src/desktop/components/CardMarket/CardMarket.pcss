.com-card-market {
    box-shadow: 0px 16px 64px rgba(0, 0, 0, 0.1);
    padding: 16px;
    gap: 24px;

    &__data {
        .coin {
            width: 24px;
            height: 24px;
        }

        .primary {
            color: var(--text-success-color);
        }

        .danger {
            color: var(--text-danger-color);
        }
    }

    table {
        border-collapse: separate !important;
        border-spacing: 8px !important;
    }
}
