.cr-market-detail-calculator {
    .calculator-wrapper {
        padding: 24px;
        gap: 10px;
        box-shadow: 0px 2px 16px rgba(0, 0, 0, 0.1);
        border-radius: 6px;

        &__icon {
            width: 38px;
            height: 38px;
        }

        &__input {
            border: none !important;
            font-weight: 700 !important;
            font-size: 16px !important;
            color: var(--text-primary-color) !important;
        }
    }
}
