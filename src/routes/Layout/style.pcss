.pg-loader-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99999999;
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--modal-background-color);
}

.container-fluid {
    &.pg-layout {
        min-height: calc(100vh - 77px);
        background: var(--body-background-color);
    }
}
